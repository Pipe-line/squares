<?xml version="1.0" encoding="UTF-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
            	android:endColor="#424242"
                android:startColor="#000000"
                android:angle="270" />
            <corners
                android:radius="10dp" />
            <padding
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#424242"
                android:startColor="#000000"
                android:angle="270" />
            <corners
                android:radius="10dp" />
            <padding
                android:bottom="-10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <solid
                android:endColor="#000000"
                android:startColor="#424242"
                android:angle="270" />
            <corners
                android:radius="10dp" />
            <padding
                android:bottom="-10dp" />
                
                

        </shape>
    </item>
</selector>